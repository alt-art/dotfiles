#!/bin/sh

#B='--blur 5'

background="-c 000000"

text="--time-color=FFFFFF --date-color=FFFFFF"

backcircle="--insidever-color=00000000"

i3lock $background $text $backcircle --ringver-color="777777" --insidewrong-color="00000000" --ringwrong-color="FF0000" --inside-color="00000000" --verif-color="00000000" --wrong-color="00000000" --layout-color="FFFFFF" --line-color="00000000" --ring-color="FFFFFF" --separator-color="FFFFFF" --keyhl-color="777777" --bshl-color="FF0000" --clock  --time-str="%I:%M" --date-str="%A, %d de %b"
